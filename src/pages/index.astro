---
import Layout from '../layout/Layout.astro';
import TVPlayer from '../components/TVPlayer';
import WidgetRadio from '../components/widgetRadio';
---

<Layout>
  {/* Banner móvil para noticias */}
  <div class="fondo gap-8">
    <div class="sm:hidden rounded-xl w-full bg-white/10 backdrop-blur-md p-4 mb-4">
      <p class="py-4 px-2 text-center text-[28px] sm:text-[51px] font-bold tracking-[2.23px] leading-[33.27px] uppercase text-white">Mira las últimas noticias</p>
      <a 
        href="https://catrielonline.com.ar" 
        target="_blank"
        class="flex items-center justify-center gap-2 px-4 py-2 rounded-full flex-grow-0 flex-shrink-0 text-[24px] sm:text-[28px] font-bold text-center uppercase text-white"
        style="background: linear-gradient(135deg, rgb(255, 84, 60) 0%, rgb(255, 60, 61) 100%);"
      >
        Catriel Online
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
          <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
        </svg>
      </a>
    </div>
    <WidgetRadio client:only="preact" />
    <TVPlayer client:only="preact" />
  </div>
</Layout>