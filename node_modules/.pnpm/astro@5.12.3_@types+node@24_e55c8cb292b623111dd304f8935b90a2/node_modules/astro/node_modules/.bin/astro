#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/Dev/.Astro/ZeroFM/node_modules/.pnpm/astro@5.12.3_@types+node@24_e55c8cb292b623111dd304f8935b90a2/node_modules/astro/node_modules:/mnt/d/Dev/.Astro/ZeroFM/node_modules/.pnpm/astro@5.12.3_@types+node@24_e55c8cb292b623111dd304f8935b90a2/node_modules:/mnt/d/Dev/.Astro/ZeroFM/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/Dev/.Astro/ZeroFM/node_modules/.pnpm/astro@5.12.3_@types+node@24_e55c8cb292b623111dd304f8935b90a2/node_modules/astro/node_modules:/mnt/d/Dev/.Astro/ZeroFM/node_modules/.pnpm/astro@5.12.3_@types+node@24_e55c8cb292b623111dd304f8935b90a2/node_modules:/mnt/d/Dev/.Astro/ZeroFM/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../astro.js" "$@"
else
  exec node  "$basedir/../../astro.js" "$@"
fi
